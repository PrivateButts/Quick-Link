{
  "name": "quick-link",
	"displayName": "Quick Link",
	"description": "Quickly puts the cruft around selected text to make it a link",
	"publisher": "CrunchSlashDev",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.quick-link.mailto",
		"onCommand:extension.quick-link.tel",
		"onCommand:extension.quick-link.link"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.quick-link.mailto",
				"title": "mailto",
				"category": "Quick Link"
			},
			{
				"command": "extension.quick-link.tel",
				"title": "tel",
				"category": "Quick Link"
			},
			{
				"command": "extension.quick-link.link",
				"title": "link",
				"category": "Quick Link"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@vscode/test-electron": "^1.6.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/PrivateButts/Quick-Link"
	}
}
